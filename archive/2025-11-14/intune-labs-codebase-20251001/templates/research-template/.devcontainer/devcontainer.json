{
  "name": "research-xyz",
  "image": "mcr.microsoft.com/devcontainers/python:3.11",
  "features": {
    "ghcr.io/devcontainers/features/github-cli:1": {}
  },
  "postCreateCommand": "pip install jupyterlab papermill ruff mypy",
  "settings": {
    "python.defaultInterpreterPath": "/usr/local/bin/python"
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-toolsai.jupyter",
        "charliermarsh.ruff",
        "ms-python.vscode-pylance"
      ]
    }
  }
}
